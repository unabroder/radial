<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controlador.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsuarioServlet</servlet-name>
        <servlet-class>controlador.UsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RadioServlet</servlet-name>
        <servlet-class>controlador.RadioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TelefonoServlet</servlet-name>
        <servlet-class>controlador.TelefonoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductoraServlet</servlet-name>
        <servlet-class>controlador.ProductoraServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsuarioServlet</servlet-name>
        <url-pattern>/Usuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RadioServlet</servlet-name>
        <url-pattern>/Radio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TelefonoServlet</servlet-name>
        <url-pattern>/Telefono</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductoraServlet</servlet-name>
        <url-pattern>/Productora</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
